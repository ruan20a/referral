<%= render 'layouts/header' %>
<%= render 'layouts/flash' %>

<div class="container" style="margin-top:160px">
      <div class="col-md-10 col-md-offset-1">
       <div class="panel panel-default">
         <div class="panel-heading"><h3 class="panel-title"><strong>Company Form</strong></h3></div>
          <div class="panel-body">
            <div class="login-form">
              <%= form_for @company do |f| %>

                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :name, autocomplete: "off", :placeholder => 'Name', :class => 'form-control login-field' %>
                  </div>

                <div>
                  <%= f.text_field :address_line_1, autocomplete: "off", :placeholder => 'Address Line 1', :class => 'form-control login-field' %>
                </div>

                <div><br>
                  <%= f.text_field :address_line_2, autocomplete: "off", :placeholder => 'Address Line 2', :class => 'form-control login-field' %>
                </div>

                <div><br>
                  <%= f.text_field :city, autocomplete: "off", :placeholder => 'City', :class => 'form-control login-field' %>
                </div>

                <div><br>
                  <%= f.text_field :state, autocomplete: "off", :placeholder => 'State', :class => 'form-control login-field' %>
                </div>

                <div><br>
                  <%= f.text_field :country, autocomplete: "off", :placeholder => 'Country', :class => 'form-control login-field' %>
                </div>

                <div><br>
                  <%= f.text_field :postal_code, autocomplete: "off", :placeholder => 'Postal Code', :class => 'form-control login-field' %>
                </div>

                <div><br>
                  <%= link_to 'Back', jobs_path %>
                </div>
              </div>

              <div class="col-md-6">

                <div>
                  <%= f.text_area :description, autocomplete: "off", :placeholder => 'Company Description', :class => 'form-control login-field', :rows => "9" %>
                </div>

                <div><br>
                  Industry  <%= f.select :industry, industry_choices, :class => 'form-control login-field' %>
                </div>

                <br><div class="form-group" style="position:inline">

                   Company Logo (accepts only jpeg, png) <%= f.file_field :image, :placeholder=>"Logo"%>
                </div>

                <div>
                  <%= f.submit "Submit", :class => 'btn btn-primary btn-md btn-block' %>
                  </div>
            </div>

            <% end %>

