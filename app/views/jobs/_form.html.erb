<%= form_for @job do |f| %>
  <div>
    <%= f.label "Company Name" %><br>
    <%= f.text_field :name %>
  </div>

   <div>
    <%= f.label "Position Title" %><br>
    <%= f.text_field :job_name %>
  </div>

   <div>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

   <div>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label "Job Description" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label "What skills are you looking for?" %><br>
    <%= f.text_field :speciality_1 %>
  </div>

   <div>
    <%= f.label :industry_1 %><br>
    <%= f.select :industry_1, industry_choices %>
  </div>

 <div>
  <%= f.label "Upload Logo File" %><br>
  <%= f.file_field :image  %>
</div>

  <div>
    <%= f.submit "Submit to Wekrut" %>
  </div>
<% end %>
<%= link_to 'Back', jobs_path %>
