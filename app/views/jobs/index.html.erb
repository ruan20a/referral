<%= render 'layouts/header' %>
<section class="jobs">


 
  



<h1 class="page-title container">All jobs</h1>

  




  <div class="container">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="form-inline" role="form">
            <div class="form-group">
            <%= search_form_for @search do |f| %>
            </div>
            <div class="form-group">
                <%= f.text_field :name_or_job_name_or_city_or_state_cont, :placeholder => 'Search', style: "color: #2c3e50; " %>
            </div>
            <div class="form-group">
                <%= f.submit "Search", :class => 'btn btn-default' %>
            </div>
            
       

            <div class="form-group">
              <%= button_to "Clear", request.path, :class =>'btn btn-default',:method => :get %>
            </div>


                 <% end %>

                 

            <div class="form-group pull-right">
              <% if @has_ref %>
                <% if current_admin.nil? %>
                  <%= button_to " #{@unreviewed_requests} Requests Pending Review", user_path(current_user.id),:method => :get,:class =>'btn btn-danger pull-right' %>
                <% else %>
                  <%= button_to "#{@unreviewed_requests} Requests Pending Review", admin_path(current_admin.id),:method => :get,:class =>'btn btn-danger pull-right' %>
                <% end %>

              <% end %>
            </div>
        </div>
      </div>



    <% @jobs.each do |job| %>
      <div class="row jobrow">
      
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
          <div class="job_title"><%= link_to job.job_name, "/jobs/#{job.id}" %></div>
          <div class="location"><i class="fa fa-map-marker"></i>&nbsp<%= job.city %>, <%= job.state %></div>
          <div class="description hidden-xs">Connect millions of people with their favourite songs and create a service that people love to use</div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
          <div class="location">Referral Fee:</div>
          <div class="reward_value"><%= number_to_currency(calculate_fee(job.referral_fee), precision: 0) %></div>
        </div>
      </div>
      <% end %>
  </div>



</section>



