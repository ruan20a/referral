<%= render 'layouts/header' %>


<div class="container" style="margin-top:160px">
  <div class="col-md-8 col-md-offset-2">
   <div class="panel panel-default">
     <div class="panel-heading"><h3 class="panel-title"><strong>Ask To Be Referred </strong></h3></div>
     <div class="panel-body">
       <div class="form-group">
             <%= form_for :referral, url: referrals_path do |f| %>

        <div class="col-md-6">
          <div class="form-group">

            <%= f.label "Who would you like to ask for a referral?" %><br>
            <%= f.text_field :referee_name, :class => 'form-control login-field', :placeholder => 'Their Name' %>
        </div>

     <div class="form-group">
            <%= f.label "What is their email?" %><br>
    <%= f.email_field :referee_email, :placeholder => 'Can be found in LinkedIn Contact Info', :class => 'form-control login-field' %>

           </div>

              <div class="form-group">
               <label> Relationship? </label><br>
               <row> <%= f.select :relationship, relationship_choices %></row>
             </div>

         </div>

<div class="col-md-6">

            <div class="form-group">
              <%= f.label "Your LinkedIn Profile URL
             " %><br>
              <div class="input-group">
               <span class="input-group-addon"><span class="fa fa-linkedin"></span>
             </span>
             <%= f.text_field :linked_profile_url, :placeholder =>  'Hint: This is found in Contact Info', :class => 'form-control login-field' %></div>
           </div>
           <div class="form-group">
             <%= f.label "Your GitHub Profile URL" %><br>
             <div class="input-group">
               <span class="input-group-addon"><span class="fa fa-github"></span>
             </span>
             <%= f.text_field :github_profile_url, :placeholder => "If Applicable", :class => 'form-control login-field'%>
            </div>
           </div>





         <div>
           <%= f.hidden_field :job_id, :value => @job.id%>
           <%= f.hidden_field :ref_type, value: @ref_type %>
         </div>

         <div>
          <%= f.submit "Submit to Wekrut", :class => "btn btn-primary pull-right" %>
        </div>
      </div>
  </div>
</div>
</div>
</div>
<% end %>






</div>
</div>
</div>
</div>
</div>

<%= render 'layouts/footer_sticky' %>