<%= render 'layouts/headerjob' %>
<br>
<div class="container" style="margin-top:120px">
      <div class="col-md-10 col-md-offset-1">
       <div class="panel panel-default">
        <%= render 'layouts/flash' %>
         <div class="panel-heading"><h3 class="panel-title"><strong>Private Invitation</strong></h3></div>
          <div class="panel-body">
            <div class="login-form">
              <%= form_for @private_invitation do |f| %>
                <div class="col-md-8 col-md-offset-2">
                  <div class="form-group">
                    <%= f.email_field :email, autocomplete: "off", :placeholder => 'Email', :class => 'form-control login-field', :required => true, :multipe => true %>
                  </div>

                  <div>
                    <%= f.submit "Submit", :class => 'btn btn-primary btn-md btn-block' %>
                  </div>
              </div>

            <% end %>

