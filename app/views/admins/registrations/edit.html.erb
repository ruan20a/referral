<%= render 'layouts/header' %>
<%= render 'layouts/flash' %>
    <div class="container" style="margin-top:160px">
      <div class="col-md-8 col-md-offset-2">
       <div class="panel panel-default">
         <div class="panel-heading"><h3 class="panel-title"><strong>Edit <%= resource_name.to_s.humanize %></strong></h3></div>
          <div class="panel-body">
            <div class="login-form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'layouts/flash' %>

  <div class="col-md-6">

        <div class="form-group">
          <%= f.text_field :first_name, autocomplete: "off", :placeholder => 'First Name', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.text_field :last_name, autocomplete: "off", :placeholder => 'Last Name', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :placeholder => 'Tagline. Example: Full Stack Developer', :class => 'form-control login-field' %>
        </div>
        <div class="form-group">
        <%= render "admins/shared/links" %>
      </div>
      </div>

        <div class="col-md-6">
               
        <div class="form-group">
          <%= f.text_field :company, autofocus: true, :placeholder => 'Email address', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation', :class => 'form-control login-field' %>
        </div>
        <div>
          <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg btn-block'%>
        </div>
      </div>

<% end %>
        
      </div>
    </div>
  </div>
</div>
<%= render "layouts/footer_sticky" %>
