<%= render 'layouts/header' %>
<section class="jobs">
  <div class="col-md-4 col-md-offset-1">
    <div class="row">
      <%= image_tag "triangle.png", :class => "img-responsive col-md-6" %>
      <div class="col-md-6 lead clouds">
        <br>
       We connect recruiters to great candidates through our approved user base.
      </div>
    </div>
    <div class="row">
     <%= image_tag "imac_jobs.png", :class => "img-responsive col-md-6" %>
      <div class="col-md-6 lead clouds"> List your jobs. Track the applicant process. Get more qualified referrals.
      </div>
    </div>
    <div class="row">
      <%= image_tag "heartdollar.png", :class => "img-responsive col-md-6" %>
      <div class="col-md-6 lead clouds extrapad">
        Find a great fit? We incentivize altruism through a small referral fee.
      </div>
    </div>
  </div>
    <div class="container" style="margin-top:80px">
      <div class="col-md-6 col-md-offset-1">
       <div class="panel panel-default">
        <%= render 'layouts/flash' %>
         <div class="panel-heading"><h3 class="panel-title"><strong>Recruiter Sign Up</strong></h3></div>
          <div class="panel-body">
            <div class="login-form">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="col-md-6">

        <div class="form-group">
          <%= f.text_field :first_name, autocomplete: "off", :placeholder => 'First Name', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.text_field :last_name, autocomplete: "off", :placeholder => 'Last Name', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.text_field :company, autofocus: true, :placeholder => 'Company', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.select :industry, industry_choices, :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          Logo: <%= f.file_field :image, :placeholder=>"Logo"%>
        </div>

        <div class="form-group">
        <%= render "admins/shared/links" %>
      </div>


      </div>

        <div class="col-md-6">

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :placeholder => 'Email address', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :class => 'form-control login-field' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation', :class => 'form-control login-field' %>
        </div>
        <div>
          <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg btn-block'%>
        </div>
      </div>

<% end %>

      </div>
    </div>
  </div>
</div>
<%= render "layouts/footer_sticky" %>

</section>
