<%= render 'layouts/header' %>
<div class="jobs">
  <div class="container" style="margin-top:160px">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <%= render 'layouts/flash' %>
        <div class="panel-heading"><h3 class="panel-title"><strong>Sign in</strong></h3>
        </div>
        <div class="panel-body">
          <div class="login-form">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="col-md-12">
              <div class="form-group">
                  <%= f.email_field :email, autofocus: true, :placeholder => 'Enter Your Email', :class => 'form-control login-field'%>
              </div>

              <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", :placeholder => 'Enter Your Password', :class => 'form-control login-field' %>
              </div>

              <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </div>
                <% end %>
              <div><%= f.submit "Sign in", :class => 'btn btn-primary btn-lg btn-block'%>
              </div>
                <% end %>

                <%= render "users/shared/links" %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    <%= render "layouts/footer_sticky" %>

