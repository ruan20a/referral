<%= render 'layouts/header' %>
<div class="jobs">

  <div class="col-md-5 col-md-offset-1">
    <div class="row">
     <%= image_tag "imac_jobs.png", :class => "img-responsive col-md-5 center-block" %>
      <div class="col-md-7 lead clouds extrapad"> <p>Search Great jobs</p>
      </div>
    </div>
    <div class="row">
      <%= image_tag "triangle.png", :class => "img-responsive col-md-5 center-block" %> 
      <div class="col-md-7 lead clouds extrapad"> <p>Refer Your Network</p>
      </div>
    </div>
    <div class="row">
      <%= image_tag "heartdollar.png", :class => "img-responsive col-md-5 center-block" %>
      <div class="col-md-7 lead clouds extrapad">Get Paid
      </div>
    </div>
  </div>
  <div class="container signup_form">
    <%= render 'layouts/flash' %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <%= render 'layouts/flash' %>
        <div class="panel-heading"><h3 class="panel-title"><strong>Sign Up</strong></h3>
        </div>
        <div class="panel-body">
          <div class="login-form">

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="col-md-6">
              <div class="form-group">
                  <%= f.email_field :email, autofocus: true, :placeholder => 'Email address', :class => 'form-control login-field' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :class => 'form-control login-field' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation', :class => 'form-control login-field' %>
              </div>
              <div class="form-group">
                <label> Industry Choice &nbsp;  &nbsp;</label>

                  <row> <%= f.select :industry_1, industry_choices %> </row>
              </div>

              <div class="form-group">
                <label> Speciality Choice </label>
                <row> <%= f.select :speciality_1, speciality_choices %></row>
              </div>
              
            </div>

            <div class="col-md-6">

              <div class="form-group">
                <%= f.text_field :first_name, autocomplete: "off", :placeholder => 'First Name', :class => 'form-control login-field' %>
              </div>

              <div class="form-group">
                <%= f.text_field :last_name, autocomplete: "off", :placeholder => 'Last Name', :class => 'form-control login-field' %>
              </div>

              <div class="form-group">
                <%= f.text_field :tagline, autocomplete: "off", :placeholder => 'Tagline, i.e. Product Guru', :class => 'form-control login-field' %>
              </div>

              <div class="form-group">
                <label> Were you invited? </label>
                <row> <%= f.email_field :inviter_email, :placeholder => 'If Yes Enter their Email', :class => 'form-control login-field' %></row>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up", :class => 'btn btn-primary btn-lg btn-block'%>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  
  
  <%= render "layouts/footer_sticky" %>



      
 
   